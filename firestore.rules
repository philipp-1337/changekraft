service cloud.firestore {
  match /databases/{database}/documents {
    match /rsvp/{document=**} {
      allow create;
      allow read, delete, update: if request.auth.uid != null;
    }
    match /urls/{document=**} {
      allow read;
      allow write: if request.auth.uid != null;
    }
    match /users/{document=**} {
      allow read;
      allow write: if request.auth.uid != null;
    }
  }
}
